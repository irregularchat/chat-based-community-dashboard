# ================================================
# SECURITY WARNING: NEVER COMMIT THIS FILE WITH REAL VALUES!
# Copy this file to .env and replace all placeholder values
# ================================================

# Application Configuration
PAGE_TITLE="Your Community Dashboard"
FAVICON_URL="https://your-domain.com/favicon.png"
BASE_DOMAIN="your-domain.com"
PORT=8503

# Database Configuration
DATABASE_URL="postgresql://username:password@localhost:5432/database_name"
POSTGRES_USER="your_postgres_user"
POSTGRES_PASSWORD="your_postgres_password"
POSTGRES_DB="your_database_name"

# Authentication Configuration
NEXTAUTH_SECRET="your_nextauth_secret_here_min_32_characters"
NEXTAUTH_URL="http://localhost:8503"
ENABLE_LOCAL_AUTH=true

# Default Admin User (change after first login!)
DEFAULT_ADMIN_USERNAME="admin"
DEFAULT_ADMIN_PASSWORD="change_this_password_immediately"
ADMIN_EMAIL="admin@your-domain.com"

# Authentik OAuth Configuration (Optional)
AUTHENTIK_CLIENT_ID="your_authentik_client_id"
AUTHENTIK_CLIENT_SECRET="your_authentik_client_secret"
AUTHENTIK_ISSUER="https://sso.your-domain.com/application/o/your_app"
AUTHENTIK_BASE_URL="https://sso.your-domain.com/api/v3"

# Authentik API Configuration (Legacy)
AUTHENTIK_API_TOKEN="your_authentik_api_token"
FLOW_ID="your_flow_id"
INVITE_FLOW_ID="your_invite_flow_id"
INVITE_LABEL="Your Invite Label"

# Email Configuration (Optional)
SMTP_HOST="smtp.your-provider.com"
SMTP_PORT=587
SMTP_USER="your_smtp_username"
SMTP_PASS="your_smtp_password"
SMTP_FROM="noreply@your-domain.com"
SMTP_BCC="admin@your-domain.com"

# Matrix Configuration (Optional)
MATRIX_HOMESERVER="https://matrix.your-domain.com"
MATRIX_ACCESS_TOKEN="your_matrix_access_token"
MATRIX_USER_ID="@bot:your-domain.com"
MATRIX_DOMAIN="your-domain.com"
MATRIX_DEFAULT_ROOM_ID="!default_room_id:your-domain.com"
MATRIX_WELCOME_ROOM_ID="!welcome_room_id:your-domain.com"

# Signal Integration (Optional)
MATRIX_SIGNAL_BRIDGE_ROOM_ID="!signal_bridge_room:your-domain.com"
MATRIX_SIGNAL_BOT_USERNAME="@signal_bot:your-domain.com"
SIGNAL_BRIDGE_BOT_RESPONSE_DELAY=5000

# Development Settings
NODE_ENV=development
SEED_DATABASE=true
LOGIN_REQUIRED=false
